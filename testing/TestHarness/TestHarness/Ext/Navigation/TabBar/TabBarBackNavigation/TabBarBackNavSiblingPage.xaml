<Page x:Class="TestHarness.Ext.Navigation.TabBar.TabBarBackNavigation.TabBarBackNavSiblingPage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  mc:Ignorable="d"
	  xmlns:uen="using:Uno.Extensions.Navigation.UI"
	  xmlns:utu="using:Uno.Toolkit.UI"
	  Background="LightGreen">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition />
		</Grid.RowDefinitions>
		
		<utu:NavigationBar Content="Sibling Page"
						   AutomationProperties.AutomationId="TabBarBackNavSiblingNavigationBar" />
		
		<StackPanel Grid.Row="1"
					Margin="20"
					Spacing="20">
			<TextBlock Text="This is the Sibling page"
					   AutomationProperties.AutomationId="SiblingPageText"
					   FontSize="24" />
			<Button Content="Go Back"
					AutomationProperties.AutomationId="SiblingGoBackButton"
					uen:Navigation.Request="-" />
		</StackPanel>
	</Grid>
</Page>
